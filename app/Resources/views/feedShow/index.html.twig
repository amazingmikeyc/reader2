{% extends 'fullLayout.html.twig' %}
{% block javascripts %}
    <script src="/js/complete.js"></script>
    <script src="/js/controller.js"></script>
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/complete.css" />
    <link rel="stylesheet" href="/css/body.css" />
{% endblock %}
{% block main %}
     {% verbatim %}
         <h1 class='page-header'><a href="{{feed.info.link}}" >{{feed.info.title}}</a></h1>
         <h2>{{feed.info.description}}</h2>
        
            <section ng-repeat="article in feed.articles">

                <h4><a href="{{article.link}}">{{article.title}}</a></h4>
                <div ng-bind-html="article.content"></div>

            </section>
    {% endverbatim %}
    
{% endblock %}
{% block navigation %}
    {% verbatim %}
        <ul class="nav nav-sidebar">
            <li ng-repeat="feed in feedlist.list">
                <a ng-click="load(feed.name)" href> {{feed.title}} </a>
            </li>
        </ul>
        
        <form type="get" ng-submit="feedlist.addFeed()">
            <input type="url" placeholder="add a new url" ng-model="feedlist.newUrl" /><input type="submit" value="add" />
        </form>
    {% endverbatim %}   
    
{% endblock %}
